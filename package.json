{
  "name": "exifcraft",
  "version": "1.0.0",
  "description": "AI-powered EXIF metadata crafting tool for images",
  "main": "dist/index.js",
  "bin": {
    "exifcraft": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/bin/cli.js",
    "cli:dev": "ts-node src/bin/cli.ts",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "electron:dev": "concurrently \"npm run build:watch\" \"npm run gui:dev\" \"wait-on dist/index.js && electron .\"",
    "dev": "node dev-start.js",
    "electron:build": "npm run build && electron-builder",
    "build:watch": "tsc --watch",
    "gui:dev": "cd gui && npm run dev",
    "gui:build": "cd gui && npm run build",
    "postinstall": "cd gui && npm install"
  },
  "keywords": [
    "exif",
    "metadata",
    "ai",
    "image",
    "cli",
    "electron",
    "gui"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "exiftool-vendored": "^30.3.0",
    "glob": "^10.3.0",
    "heic-convert": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "overrides": {
    "glob": "^10.3.0"
  },
  "build": {
    "appId": "com.exifcraft.app",
    "productName": "ExifCraft",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "gui/dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.photography",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
